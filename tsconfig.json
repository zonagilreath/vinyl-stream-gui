{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node-modules/@types",
      "./**/node_modules/@types",
      "./src",
    ]
  },
  "include": ["src/**/*"]
}
